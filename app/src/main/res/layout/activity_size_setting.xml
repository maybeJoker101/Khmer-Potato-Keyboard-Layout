<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maybejoker101.khmerpotatokeyboard.activity.SizeSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/keyButtonKeyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text=" ទំហំកំពស់ប៊ូតុងចុច"
            android:textColor="@color/colorKeyBackgroundDefault"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.warkiz.tickseekbar.TickSeekBar
            android:id="@+id/buttonHeightTickBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:tsb_max="50"
            app:tsb_min="30"
            app:tsb_show_tick_marks_type="oval"
            app:tsb_show_tick_texts="above"
            app:tsb_thumb_color="@color/colorPrimary"
            app:tsb_thumb_size="16dp"
            app:tsb_tick_marks_color="@color/colorPrimary"
            app:tsb_tick_marks_size="8dp"
            app:tsb_tick_texts_color="@color/colorKeyBackgroundDefault"
            app:tsb_tick_texts_size="16sp"
            app:tsb_ticks_count="5"
            app:tsb_track_background_color="@color/colorKeyContentSecondaryDefault"
            app:tsb_track_background_size="2dp"
            app:tsb_track_progress_color="@color/colorKeyBackgroundDefaultClicked"
            app:tsb_track_progress_size="3dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/keyButtonMainFontSizeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="ទំហំអក្សនៅកណ្ដាលប៊ូតុងចុច"
            android:textColor="@color/colorKeyBackgroundDefault"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.warkiz.tickseekbar.TickSeekBar
            android:id="@+id/buttonMainFontSizeTickBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:tsb_max="24"
            app:tsb_min="10"
            app:tsb_show_tick_marks_type="oval"
            app:tsb_show_tick_texts="above"
            app:tsb_thumb_color="@color/colorPrimary"
            app:tsb_thumb_size="16dp"
            app:tsb_tick_marks_color="@color/colorPrimary"
            app:tsb_tick_marks_size="8dp"
            app:tsb_tick_texts_color="@color/colorKeyBackgroundDefault"
            app:tsb_tick_texts_size="16sp"
            app:tsb_ticks_count="8"
            app:tsb_track_background_color="@color/colorKeyContentSecondaryDefault"
            app:tsb_track_background_size="2dp"
            app:tsb_track_progress_color="@color/colorKeyBackgroundDefaultClicked"
            app:tsb_track_progress_size="3dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/keyButtonOtherFontSizeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="ទំហំអក្សនៅខាងប៊ូតុងចុច"
            android:textColor="@color/colorKeyBackgroundDefault"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.warkiz.tickseekbar.TickSeekBar
            android:id="@+id/buttonOtherFontSizeTickBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:tsb_max="24"
            app:tsb_min="8"
            app:tsb_show_tick_marks_type="oval"
            app:tsb_show_tick_texts="above"
            app:tsb_thumb_color="@color/colorPrimary"
            app:tsb_thumb_size="16dp"
            app:tsb_tick_marks_color="@color/colorPrimary"
            app:tsb_tick_marks_size="8dp"
            app:tsb_tick_texts_color="@color/colorKeyBackgroundDefault"
            app:tsb_tick_texts_size="16sp"
            app:tsb_ticks_count="9"
            app:tsb_track_background_color="@color/colorKeyContentSecondaryDefault"
            app:tsb_track_background_size="2dp"
            app:tsb_track_progress_color="@color/colorKeyBackgroundDefaultClicked"
            app:tsb_track_progress_size="3dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <!--Popup Setting-->
        <TextView
            android:id="@+id/popupHeightAndWidthText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="ទំហំប្រអប់ផុស​ឡើង"
            android:textColor="@color/colorKeyBackgroundDefault"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.warkiz.tickseekbar.TickSeekBar
            android:id="@+id/popupWidthAndHeightTickBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:tsb_max="140"
            app:tsb_min="60"
            app:tsb_show_tick_marks_type="oval"
            app:tsb_show_tick_texts="above"
            app:tsb_thumb_color="@color/colorPrimary"
            app:tsb_thumb_size="16dp"
            app:tsb_tick_marks_color="@color/colorPrimary"
            app:tsb_tick_marks_size="8dp"
            app:tsb_tick_texts_color="@color/colorKeyBackgroundDefault"
            app:tsb_tick_texts_size="16sp"
            app:tsb_ticks_count="5"
            app:tsb_track_background_color="@color/colorKeyContentSecondaryDefault"
            app:tsb_track_background_size="2dp"
            app:tsb_track_progress_color="@color/colorKeyBackgroundDefaultClicked"
            app:tsb_track_progress_size="3dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/popupMiddleTextSizeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="ទំហំអក្សនៅកណ្ដាលប្រអប់ផុស​ឡើង"
            android:textColor="@color/colorKeyBackgroundDefault"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.warkiz.tickseekbar.TickSeekBar
            android:id="@+id/popupMIddleTextTickBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:tsb_max="36"
            app:tsb_min="16"
            app:tsb_show_tick_marks_type="oval"
            app:tsb_show_tick_texts="above"
            app:tsb_thumb_color="@color/colorPrimary"
            app:tsb_thumb_size="16dp"
            app:tsb_tick_marks_color="@color/colorPrimary"
            app:tsb_tick_marks_size="8dp"
            app:tsb_tick_texts_color="@color/colorKeyBackgroundDefault"
            app:tsb_tick_texts_size="16sp"
            app:tsb_ticks_count="6"
            app:tsb_track_background_color="@color/colorKeyContentSecondaryDefault"
            app:tsb_track_background_size="2dp"
            app:tsb_track_progress_color="@color/colorKeyBackgroundDefaultClicked"
            app:tsb_track_progress_size="3dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/popupOtherTextSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="ទំហំអក្សនៅខាងប្រអប់ផុស​ឡើង"
            android:textColor="@color/colorKeyBackgroundDefault"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.warkiz.tickseekbar.TickSeekBar
            android:id="@+id/popupOtherTextSizeTickBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:tsb_max="24"
            app:tsb_min="12"
            app:tsb_show_tick_marks_type="oval"
            app:tsb_show_tick_texts="above"
            app:tsb_thumb_color="@color/colorPrimary"
            app:tsb_thumb_size="16dp"
            app:tsb_tick_marks_color="@color/colorPrimary"
            app:tsb_tick_marks_size="8dp"
            app:tsb_tick_texts_color="@color/colorKeyBackgroundDefault"
            app:tsb_tick_texts_size="16sp"
            app:tsb_ticks_count="7"
            app:tsb_track_background_color="@color/colorKeyContentSecondaryDefault"
            app:tsb_track_background_size="2dp"
            app:tsb_track_progress_color="@color/colorKeyBackgroundDefaultClicked"
            app:tsb_track_progress_size="3dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />
        <!--End Popup-->


        <!--Preview-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/characterButtonFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/colorKeyBackgroundDefaultClicked"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textPopupBackgroundColor">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/popUpParentLayout"
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                        <TextView
                            android:id="@+id/popup_middle_big"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ក"
                            android:textColor="@color/colorKeyContentPrimaryDefault"
                            android:textSize="@dimen/popup_middleBigSize"
                            android:visibility="invisible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/popup_middle_primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ក"
                            android:textColor="@color/colorKeyContentPrimaryDefault"
                            android:textSize="@dimen/popup_middleNormalSize"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/popup_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="ខ"
                            android:textColor="@color/colorKeyContentSecondaryDefault"
                            android:textSize="@dimen/popup_otherTextSize"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/popup_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="គ"
                            android:textColor="@color/colorKeyContentSecondaryDefault"
                            android:textSize="@dimen/popup_otherTextSize"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/popup_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="ឃ"
                            android:textColor="@color/colorKeyContentSecondaryDefault"
                            android:textSize="@dimen/popup_otherTextSize"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/popup_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/popup_marginStartEnd"
                            android:text="ង"
                            android:textColor="@color/colorKeyContentSecondaryDefault"
                            android:textSize="@dimen/popup_otherTextSize"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
